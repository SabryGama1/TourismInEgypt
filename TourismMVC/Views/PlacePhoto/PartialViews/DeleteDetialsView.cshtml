@model PlacePhotoViewModel

<div class="p-5">

    <div class="form-group">
        <label asp-for="Id" class="col-form-label fw-bold fs-4"></label>
        <input asp-for="Id" class="form-control" readonly />

    </div>


    <div class="form-group">
        <label asp-for="Place.Name" class="col-form-label fw-bold fs-4"></label>
        <input value="@Model.Place.Name" class="form-control" readonly />

    </div>

    <div class="form-group mt-4">
        <label class="col-form-label fw-bold fs-4">Image</label>
        <img src="~/@Model.Photo" width="100" height="100" class="rounded-2 img-fluid" />
    </div>
</div>
